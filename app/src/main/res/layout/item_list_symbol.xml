<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgSymbol"
            android:layout_width="71dp"
            android:layout_height="75dp"
            android:layout_weight="0.11" />

        <TextView
            android:id="@+id/tvNameSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_toEndOf="@+id/imgSymbol"
            android:layout_toRightOf="@+id/imgSymbol"
            android:text="Tên biển báo"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContentSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameSymbol"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/imgSymbol"
            android:layout_weight="1"
            android:background="#ffffff"
            android:padding="2dp"
            android:text="Nội dung biển báo"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>
