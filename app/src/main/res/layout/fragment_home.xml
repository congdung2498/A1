<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nguyentuan.tracnghiem1.monhoc.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageButton
                android:id="@+id/btnSlide1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/banner_1" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/banner_2"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/banner_3"/>

        </ViewFlipper>
        <LinearLayout
            android:id="@+id/line_2"
            android:layout_below="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="2">


            <Button
                android:id="@+id/btnA1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_4"
                android:text="Thi sát hạch"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="#ffffff"/>

            <Button
                android:id="@+id/btnBienBao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/bien_bao_home"
                android:text="Biển báo"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="#ffffff"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_3"
            android:layout_below="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="2">
            <Button
                android:id="@+id/btnLyThuyet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/icon_2"
                android:text="Câu hỏi"
                android:textSize="12dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnMeo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/meo"
                android:text="Mẹo"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="#ffffff"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
